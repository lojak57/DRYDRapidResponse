		"svelte-check": "^3.6.7",
		"tailwindcss": "^3.4.1",
		"typescript": "^5.4.2",
		"@typescript-eslint/eslint-plugin": "^7.2.0",
		"@typescript-eslint/parser": "^7.2.0",
		"vite": "^5.1.6",
		"vitest": "^1.3.1"
	},
	"dependencies": {
		"date-fns": "^3.3.1",
		"nanoid": "^5.0.6",
		"uuid": "^9.0.1"
	}
}
